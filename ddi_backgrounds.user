    <tag group="BackSkill" tag="skPercepti"/>
    <tag group="Hide" tag="Special"/>
    </thing>
  <thing id="bgParenOrp" name="Parentage - Orphan" description="You were left in an orphanage with no trace of your parents. Have you sought information regarding your lineage?{br}{i}Associated Skills: {/i}Bluff, Insight" compset="Background" uniqueness="unique">
