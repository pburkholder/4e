    <tag group="BackSkill" tag="skStreetwi"/>
    <tag group="Hide" tag="Special"/>
    </thing>
  <thing id="bgParenMin" name="Parentage - Minstrel Family" description="Your family traveled and performed for your supper. Now that you have moved on, how is the troupe getting on?{br}{i}Associated Skills: {/i}Acrobatics, Diplomacy" compset="Background" uniqueness="unique">
