    <tag group="BackCamp" tag="ScalesofWa" name="Scales of War Adventure Path"/>
    </thing>
  <thing id="bgMoonElf" name="Moon Elf" description="The widely traveled moon elves find it useful to know many languages, and to learn more about other people wherever they go.{br}{i}Associated Skills: {/i}Diplomacy, Streetwise{br}{i}Associated Languages: {/i}Chondathan, Damaran, Untheric" compset="Background" uniqueness="unique">
