    <tag group="BackSkill" tag="skInsight"/>
    <tag group="Hide" tag="Special"/>
    </thing>
  <thing id="bgParenRai" name="Parentage - Raised by Wolves" description="You crawled, then ran, with a pack of wild animals. Do you have great respect for the beasts, or are you putting that phase of your life behind you?{br}{i}Associated Skills: {/i}Intimidate, Nature" compset="Background" uniqueness="unique">
