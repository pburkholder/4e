    <evalrule phase="Validate" priority="10000" message="Too Many Symbols Selected"><![CDATA[
      ~disable any of our blessings that aren't selected


      var total as number
      foreach pick in hero from Power where "User.FeatureChk & PowerLink.OrdPrst"
        if (eachpick.field[usrIsCheck].value <> 0) then
          total += 1
        else
          perform eachpick.assign[Hide.Special]
          perform eachpick.assign[Helper.Disable]
          endif
        nexteach


        validif ( total = 1 )
        if ( total <> 1 ) then
          @message = "Choose Only One Symbol"
        endif]]></evalrule>
    </thing>
  <thing id="pwOrdPrsta" name="Shining Symbol" description="Hit: 1d8 + highest ability modifier radiant damage, and the target takes a -2 penalty to attack rolls until the end of your next turn.\n    Level 11: 2d8 + highest ability modifier radiant damage.\n    Level 21: 3d8 + highest ability modifier radiant damage." compset="Power">
