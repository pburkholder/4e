  <!-- Magic Melee Weapon -->
  <thing
    id="wpMagic"
    name=" &#150; Magic Weapon &#150;"
    compset="Melee"
    description="A configurable magic weapon."
    isprivate="yes"
    buytemplate="BuyCash"
    xactspecial="10"> <!-- =10 configures template for special magic item handling -->

    <!-- Grab all important details from the child weapon -->
    <eval index="1" phase="Final" priority="1000" name="wpMagic copy">
      <after name="mgCost final"/><![CDATA[
      call MagicWep
      ]]></eval>

    <child entity="mgWeapon"/>
    </thing>


